<form ng-submit="search()" ng-controller='searchCtrl'>
  <input type="text" ng-model="searchTerm" name="search" autofocus="true" placeholder="Product Name">
  <input type="submit" value="Search">
  <% @links.each do |link| %>
  <div>
    <a href="<%= 'http://cosdna.com/eng/' + link.href %>">
      <%= link %>
    </a>
  </div>
  <% end %>
</form>